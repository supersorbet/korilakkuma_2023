        lpStakeStartTimes[msg.sender][_lpIndex] = block.timestamp;

        if (_referrer != address(0) && _referrer != msg.sender) {
            if (
                farmer[_referrer].activeUser &&
                farmer[msg.sender].referrer == address(0)
            ) {
