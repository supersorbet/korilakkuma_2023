        returns (uint256)
    {
        return (
            (
                stakedLPBalances[_user][_lpIndex].mul(globalEmissionRate).div(
                    lpEmissionRate[lpAddresses[_lpIndex]]
                )
            ).mul(minsPastStakeTime(_user, _lpIndex)).div(halvening)
        );
    }

    /**
